{
	"$schema": "http://json.schemastore.org/prettierrc",
	"plugins": [
		"prettier-plugin-packagejson",
		"@ianvs/prettier-plugin-sort-imports"
	],

	"importOrder": [
		"",
		"<BUILTIN_MODULES>",
		"",
		"<THIRD_PARTY_MODULES>",
		"",
		"^[../]",
		"",
		"^[./]",
		"",
		"^.+\\.s?css$"
	],
	"importOrderParserPlugins": [
		"typescript",
		"jsx",
		"decorators-legacy",
		"importAssertions"
	],

	"useTabs": true,

	"trailingComma": "all",

	"proseWrap": "preserve",

	"overrides": [
		{
			"files": ".*rc",
			"options": { "parser": "json" }
		},
		{ "files": ".nvmrc", "options": { "parser": "yaml" } },
		{ "files": ".npmrc", "options": { "parser": "yaml" } }
	]
}
